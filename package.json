    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "http-status-codes": "^2.3.0",
    "pino": "^8.18.0",
    "pino-http": "^9.0.0",
    "sequelize": "^6.35.2",
    "sqlite3": "^5.1.7",
    "supertest": "^6.3.4",
