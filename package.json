  "private": true,
  "engines": {
    "npm": ">=10.0.0",
    "node": ">=20.0.0"
  },
  "version": "0.1.0",
  "main": "./src/index.ts",
  "scripts": {
    "build": "tsc",
    "bundle": "node ./esbuild.config.js",
    "dev": "nodemon",
    "dev:stdin": "nodemon -I",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "start": "TZ=UTC ts-node ./src/index.ts",
    "start:built": "TZ=UTC node ./index.js",
    "build:bundle:start:built": "npm run build && npm run bundle && TZ=UTC node ./index.js",
    "test": "TZ=UTC jest",
    "test:unit": "npm test -- unit.test.ts",
    "test:integration": "DB_FILE=:memory: npm test -- integration.test.ts",
    "test:unit:watch": "npm run test:unit -- --watch",
    "test:integration:watch": "npm run test:integration -- --watch",
    "test:ci": "npm run test:unit && npm run test:integration"
  },
  "keywords": [],
